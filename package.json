{
  "name": "audio-dsl",
  "version": "1.0.0",
  "description": "An experimental DSL for AudioWorklet",
  "scripts": {
    "start": "NODE_DEBUG=dsl run-p -s server watch-and-run",
    "server": "http-server -c-1",
    "watch-and-run": "tsc-watch --onSuccess 'npm run on-success'",
    "on-success": "run-s build-runtime example",
    "example": "npm run bundle-runtime-example && sh -c 'bin/compile example/a.dsl --outDir public/js'",
    "build": "run-s build-compiler build-runtime",
    "build-compiler": "tsc",
    "build-runtime": "tsc -p runtime",
    "bundle-runtime-example": "rollup dist/runtime/index.js --format es --file public/js/runtime/runtime.js",
    "test": "mocha -r source-map-support/register dist/test/**/*.js",
    "clean": "rm -rf dist public/js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "binaryen": "^91.0.0",
    "chalk": "^3.0.0",
    "rollup": "^2.0.3"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.0",
    "http-server": "^0.12.1",
    "mocha": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "source-map-support": "^0.5.16",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.8.3"
  }
}
